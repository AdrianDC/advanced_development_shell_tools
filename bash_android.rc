# === Repo shortcuts ===
function repor() { currentdir=${PWD}; while [[ "${PWD}" != '/' && ! -d './device' && ! -d './frameworks' ]]; do cd ..; done; }
function repos() { currentdir=${PWD}; repor; if [ -f ./build/envsetup.sh ]; then source ./build/envsetup.sh; croot; breakfast huashan; else echo "Android Repo not found..."; fi; cd "$currentdir"; }
alias reposi='repo sync .';

# === ADB shortcuts ===
alias adbr='adb wait-for-devices; adb root; sleep 2; adb wait-for-devices; adb remount; sleep 1; adb wait-for-devices';
function adbps() { if [ ! -z "$1" ]; then file=$(printf "$1" | sed "s/.*\(\/system.*\)/\1/g"); printf "$file: "; adb push "$1" "$file"; fi; }
alias adbp='adbr; adbps';
alias adbs='adb shell';

