# === Git patchs ===
function gitacp() { \
                    clear; url=$1; echo $url; \
                    if [[ ! $url =~ '.patch' ]]; then url='$url.patch'; fi; \
                    patch=$(curl -s $url 2>nul); \
                    git apply --stat '$patch'; \
                    git apply --check '$patch'; \
                  }
function gitapp() { \
                    clear; url=$1; echo $url; \
                    if [[ ! $url =~ '.patch' ]]; then url='$url.patch'; fi; \
                    patch=$(curl -s $url 2>nul); \
                    git apply --3way '$patch'; \
                  }

