# === Diff Binaries ===
function diffbin()
{
  if [ -z "$3" ]; then
    diff -y <(xxd "$1") <(xxd "$2") | less | colordiff;
  else
    diff -y <(xxd "$1") <(xxd "$2") | less | colordiff | head -n $3;
  fi;
}

