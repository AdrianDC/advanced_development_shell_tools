# === Terminal New Tab ===
function newtab()
{
  if [ -z "$WID" ]; then
    WID=$(xprop -root | grep "_NET_ACTIVE_WINDOW(WINDOW)"| awk '{print $5}');
  fi;
  xdotool windowfocus $WID;
  xdotool key ctrl+shift+t $WID;
  if [ ! -z "$1" ]; then
    if [ ! -z "$2" ]; then
      xdotool type --clearmodifiers "echo -e '\033]2;'$2'\007';$1";
    else
      xdotool type --clearmodifiers "$1";
    fi;
    xdotool key Return;
  fi;
  wmctrl -i -a $WID;
}

