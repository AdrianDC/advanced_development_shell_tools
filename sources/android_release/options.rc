# === Options - Builds - bringup ===
function __shtools-builds-bringup-enable()
{
  # Usage: __shtools-builds-bringup-enable (Enable bringup builds option)
  __shtoolsoptions '__shtools-builds-bringup-' 'enable';
  export ADVANCED_DEVELOPMENT_SHELL_TOOLS_BUILD_BRINGUP=true;
}
function __shtools-builds-bringup-disable()
{
  # Usage: __shtools-builds-bringup-disable (Disable bringup builds option)
  __shtoolsoptions '__shtools-builds-bringup-' 'disable';
  export ADVANCED_DEVELOPMENT_SHELL_TOOLS_BUILD_BRINGUP=;
}
function __shtools-builds-bringup-active()
{
  # Usage: __shtools-builds-bringup-active (Get bringup builds option)
  __shtoolsoptions '__shtools-builds-bringup-';
  [ ! -z "${ADVANCED_DEVELOPMENT_SHELL_TOOLS_BUILD_BRINGUP}" ];
}

